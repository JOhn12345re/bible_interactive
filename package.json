{
  "name": "site-biblique",
  "private": true,
  "version": "1.0.5",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "api": "node server.local.js",
    "dev:full": "concurrently \"npm run api\" \"npm run dev\"",
    "build": "vite build",
    "vercel-build": "vite build",
    "build:deploy": "vite build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "preview": "vite preview --host",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "cypress run",
    "test:open": "cypress open",
    "test:headless": "cypress run --headless",
    "test:chrome": "cypress run --browser chrome",
    "test:firefox": "cypress run --browser firefox",
    "content:validate": "node scripts/validate_content_jsons.js",
    "bible:check": "node scripts/check_bible_json.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "node scripts/security-audit.js",
    "security:update": "npm audit fix",
    "security:setup": "node scripts/setup-security.js",
    "security:test": "node scripts/test-security.js",
    "security:monitor": "node scripts/monitor-security.js",
    "security:full": "npm run security:audit && npm run security:check && npm run security:test",
    "deploy:secure": "node scripts/deploy-secure.js",
    "deps:update": "npm update && npm audit fix"
  },
  "dependencies": {
    "@fontsource/opendyslexic": "^5.0.0",
    "@vercel/postgres": "^0.10.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "hls.js": "^1.6.12",
    "phaser": "^3.80.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "zustand": "^4.5.2"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.28.1"
  },
  "devDependencies": {
    "@cypress/vite-dev-server": "^7.0.1",
    "@cypress/webpack-dev-server": "^5.1.5",
    "@types/node": "^24.10.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vercel/node": "^5.5.5",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.2.1",
    "cypress": "^15.6.0",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.4.21",
    "vite-plugin-pwa": "^0.20.5"
  }
}
