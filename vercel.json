{
  "version": 2,
  "name": "bible-interactive",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_BIBLE_DEFAULT_VERSION": "LSG",
    "VITE_BIBLE_LANGUAGE": "fr",
    "VITE_APP_NAME": "Bible Interactive",
    "VITE_APP_VERSION": "1.0.0-beta"
  }
}
